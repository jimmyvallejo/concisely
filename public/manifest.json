{
    "manifest_version": 3,
    "name": "Concisely",
    "icons": {
        "16": "c-xsmall.png",
        "32": "c-small.png",
        "48": "c-med.png",
        "128": "c-large.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "version": "1.0.1",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["scripting", "tabs", "activeTab", "storage"],
    "host_permissions": [
       "http://*/*",
       "https://*/*" 
    ],
    "web_accessible_resources": [{
      "resources": ["*.css", "*.js", "*.png"],
      "matches": ["<all_urls>"]
    }]
}